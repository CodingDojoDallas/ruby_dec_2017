<h1><%= @dojo.branch  %></h1><a href="/dojos/<%= @dojo.id %>/edit">Edit</a>
<br>
<br>

<label>Address: <%= @dojo.street %> </label>
<br>
<br>
<label>City: <%= @dojo.city %> State: <%= @dojo.state %></label>
<br>
<br>

<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>

<h4>Student Rooster</h4>
<br>
<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Action</th>
  </tr>
    <% @students.each do |student| %>
  <tr>
    <td><%= student.first_name %></td>
    <td><%= student.last_name %></td>
    <td><%= student.email %></td>
    <td><a href="<%= student_path @dojo.id, student.id %>">Show</a>
        <a href="<%= edit_student_path @dojo.id, student.id %>">Edit</a>
        <a href="<%= remove_student_path @dojo.id, student.id %>" data-method='delete'>Delete</a>
    </td>
  </tr>
    <% end %>
</table>
<a href="/">Home</a>
<a href="<%= new_student_path @dojo.id %>">Add Student</a>
