<h1>Edit Dojo</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |err| %>
        <p class='error'><%= err %></p>
    <% end %>
<% end %>

<form action="/dojos/<%= @dojo_id %>/students/<%= @student.id %>/update" method='post'>
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">â€‹
    <input type="hidden" name="_method" value="patch">
    <input name='student[first_name]' type='text' value='<%= @student.first_name %>'>
    <input name='student[last_name]' type='text' value='<%= @student.last_name %>'>
    <input name='student[email]' type='text' value='<%= @student.email %>'>
    <button type='submit'>Update</button>
</form>