<h1>Edit Dojo</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |err| %>
        <p class='error'><%= err %></p>
    <% end %>
<% end %>

<form action='/dojos/<%= @dojo.id %>/update' method='post'>
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">â€‹
    <input type="hidden" name="_method" value="patch">
    <input name='dojo[branch]' type='text' value='<%= @dojo.branch %>'>
    <input name='dojo[street]' type='text' value='<%= @dojo.street %>'>
    <input name='dojo[city]' type='text' value='<%= @dojo.city %>'>
    <input name='dojo[state]' type='text' value='<%= @dojo.state %>'>
    <button type='submit'>Update</button>
</form>