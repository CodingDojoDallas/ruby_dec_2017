<% content_for :title, 'Users Index' %>
<% content_for :two_col_left do %>
<h3>All Users</h3>
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Favorite Language</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |s| %>
        <tr>
            <td><%= s.first_name %></td>
            <td><%= s.last_name %></td>
            <td><%= s.favorite_language %></td>
        </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<% content_for :two_col_right do %>  
    <h3>New User</h3>
    <% if flash[:errors] %>
        <% flash[:errors].each do |err| %>
            <p class='error'><%= err %></p>
        <% end %>
    <% end %>
    <form action='users/create' method='post'>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="First Name" name='user[first_name]'>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Last Name" name='user[last_name]'>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Favorite Language" name='user[favorite_language]'>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <a href="/posts" class="btn btn-info" role="button">All Posts</a>
<% end %>