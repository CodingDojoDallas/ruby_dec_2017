<form action='<%= dojos_create_path %>' method='post'>
	<input name="authenticity_token" value = "<%=form_authenticity_token %>" type = "hidden">
	<label for ="name">Your Name:</label>
	<input type="text" name='survey[name]'>
	<label for ="location">Dojo Location:</label>
	<select name='survey[location]'>
		<option value="silicon_valley">Silicon Valley</option>
		<option value="seattle">Seattle</option>
		<option value="los_angeles">Los Angeles</option>
		<option value="dallas">Dallas</option>
		<option value="washington">Washington DC</option>
		<option value="chicago">Chicago</option>
		<option value="tulsa">Tulsa</option>
	</select>
	<label for ="language">Favorite Language:</label>
	<select name='survey[language]'>
		<option value="python">Python</option>
		<option value="ruby">Ruby on Rails</option>
		<option value="ios">iOS Swift</option>
		<option value="mean">MEAN</option>
		<option value=".net">C# / .NET CORE</option>
		<option value="java">JAVA</option>
	</select>
	<p><label for="comments">Comments (Optional)</label></p>
	<textarea value="comments" name='survey[comments]'></textarea>
	<input type="submit" name="submit" value="Submit">
</form>